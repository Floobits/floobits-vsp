<ui:DialogWindow x:Class="Floobits.floobits_vsp.JoinWorkspaceURL"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="clr-namespace:Microsoft.VisualStudio.PlatformUI;assembly=Microsoft.VisualStudio.Shell.12.0"
        Title="Join Workspace by URL" Height="153" Width="400">
    <Grid>
        <TextBox Name="url" HorizontalAlignment="Left" Height="28" Margin="52,50,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="330"/>
        <Label Content="URL:" HorizontalAlignment="Left" Margin="10,50,0,0" VerticalAlignment="Top" Target="{Binding ElementName=url}" RenderTransformOrigin="-0.676,0.5" Height="28"/>
        <Button Content="Cancel" IsCancel="True" Click="Cancel_Click" HorizontalAlignment="Left" Margin="307,83,0,0" VerticalAlignment="Top" Width="75" Height="29"/>
        <Button Content="Join" IsDefault="True" Click="Join_Click" HorizontalAlignment="Left" Margin="216,83,0,0" VerticalAlignment="Top" Width="75" Height="29"/>
        <Button Name="PathDialog" Content=">" Click="PathDialog_Click" HorizontalAlignment="Left" Margin="10,13,0,0" VerticalAlignment="Top" Width="34"/>
        <TextBox Name="PathLabel" HorizontalAlignment="Left" Height="28" Margin="52,10,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="330" IsReadOnly="True" VerticalScrollBarVisibility="Auto"/>
    </Grid>
</ui:DialogWindow>
