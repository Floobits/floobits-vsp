<UserControl x:Class="Floobits.floobits_vsp.ChatControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             Background="{DynamicResource VsBrush.Window}"
             Foreground="{DynamicResource VsBrush.WindowText}"
             mc:Ignorable="d"
             Name="FlooChatWindow" Height="300" Width="320" >
    <Grid>
        <Border BorderThickness="1" BorderBrush="Black" Margin="5,25,5,5">
            <TextBlock Name="ChatDialog" Background="White" Margin="1,1,1,1" ScrollViewer.CanContentScroll="True" ScrollViewer.VerticalScrollBarVisibility="Auto"/>
        </Border>
        <Button Name="Send" Content="Send" Width="50" Height="20" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,0"/>
        <TextBox x:Name="ChatMsg" HorizontalAlignment="Left" VerticalAlignment="Top" Width="250" Height="20" Margin="65,0,0,0" />
    </Grid>
</UserControl>
